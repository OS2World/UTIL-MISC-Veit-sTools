einrichten:
                        mov ah,009
                        mov dx,text_titel
                        int 021

                        mov ax,04010
                        int 02f
                        cmp ax,04010
                        jz kein_os2

                        einfaches_tsr

			mov ax,04c00
			int 021
                        
