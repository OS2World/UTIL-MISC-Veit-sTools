; ########## Grafikmodus

linie_teilprozedur:
                        pusha

                          ; VF AND ( NOT HF )
                          mov ah,re_vf
                          mov al,re_hf
                          xor al,00f
                          and al,ah
                          farbe ax ; al
                          mov si,w [lit_grafik]
                          mov ax,w [lit_x]
                          mov bx,w [lit_y]
                          grafik_block ax,bx,si

                          ; HF AND ( NOT VF )
                          mov ah,re_vf
                          mov al,re_hf
                          xor ah,00f
                          and al,ah
                          farbe ax ; al
                          mov si,w [lit_grafik]
                          add si,16
                          mov ax,w [lit_x]
                          mov bx,w [lit_y]
                          grafik_block ax,bx,si

                          ; VF AND HF
                          mov ah,re_vf
                          mov al,re_hf
                          and al,ah
                          farbe ax ; al
                          mov si,w [lit_grafik]
                          add si,16+16
                          mov ax,w [lit_x]
                          mov bx,w [lit_y]
                          grafik_block ax,bx,si

                          ; ( NOT VF ) AND ( NOT HF )
                          mov ah,re_vf
                          mov al,re_hf
                          xor ax,00f0f
                          and al,ah
                          farbe ax ; al
                          mov si,w [lit_grafik]
                          add si,16+16+16
                          mov ax,w [lit_x]
                          mov bx,w [lit_y]
                          grafik_block ax,bx,si
                        popa
                        ret

