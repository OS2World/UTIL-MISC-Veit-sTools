grafik_block macro
                        mov gb_x,#1
                        mov gb_y,#2
                        mov gb_off,#3
                        call grafik_block_prozedur
#em

grafik_block_prozedur:

                        push ds
                          push es
                            pusha

                              cld
                              mov ax,segment_0a000
                              mov es,ax

                              mov ax,w [gb_y]
                              mov bx,00050              ; 80 = 640/8
                              mul bx
                              mov bx,w [gb_x]
                              shr bx,3                  ; /8
                              add ax,bx
                              mov di,ax
                              mov si,w [gb_off]
                              movsb                     ; Zeile 0
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 1
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 2
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 3
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 4
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 5
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 6
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 7
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 8
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 9
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 10
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 11
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 12
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 13
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 14
                              add di,0004f              ; 1+79
                              movsb                     ; Zeile 15

                            popa
                          pop es
                        pop ds
                        ret

