x1                      equ parameter1 ; w
y1                      equ parameter2 ; w
x2                      equ parameter3 ; w
y2                      equ parameter4 ; w
farbefuellwert          equ parameter5 ; b

balken_grafik macro
                        push #5
                        push #4
                        push #3
                        push #2
                        push #1
                        call balkenprozedur_grafik
#em

balken_text macro
                        push #5
                        push #4
                        push #3
                        push #2
                        push #1
                        call balkenprozedur_text
#em

; lokale Variablen

zeile                   dw ?
fuellbits               db ?

; ################################### Grafikmodus

balkenprozedur_grafik:
                        prozedur_anfang
                          push es
                            pusha

                              mov fuellbits,0ff
                              mov al,farbefuellwert
                              call farbumrechnung
                              farbe ax ; al
                              or al,al ; keine Farbebene ?
                              if nz call balkenprozedur_grafik_teilprozedur

                              mov fuellbits,000
                              mov al,farbefuellwert
                              call farbumrechnung
                              xor al,00f ; Negieren
                              farbe ax ; al
                              or al,al ; keine Farbebene ?
                              if nz call balkenprozedur_grafik_teilprozedur

                            popa
                          pop es
                        prozedur_ende 5


balkenprozedur_grafik_teilprozedur:


                        cld
                        mov ax,segment_0a000
                        mov es,ax
                        mov zeile,y1

balken_schleife:

                        mov ax,zeile

                        ; 80=640/8 Punkte / Zeile
                        shl ax,4                ; *16
                        mov di,ax               ; *16
                        shl ax,2                ; *64
                        add di,ax               ; *80

                        mov ax,x1
                        shr ax,3                ; /8
                        add di,ax

                        mov cx,x2
                        sub cx,x1
                        shr cx,3                ; /8

                        mov al,fuellbits
                        mov ah,al

                        cld
                        shr cx,1
                        rep stosw
                        if c stosb

                        mov ax,zeile
                        cmp ax,y2
                        jnl balken_ende

                        inc zeile
                        jmp short balken_schleife

balken_ende:
                        ret

; ################################### Textmodus

balkenprozedur_text:
                        prozedur_anfang
                          pusha
                            push es

                              cld
                              mov ax,segment_0b800
                              mov es,ax
                              mov ax,y1
                              mov bl,80        ; 80 Zeichen je Zeile
                              mul bl
                              add ax,x1
                              shl ax,1         ; 2 Byte je Zeichen
                              mov di,ax
                              mov al,farbefuellwert
                              call farbumrechnung
                              mov ah,al
                              shl ah,4         ; "Hintergrund"
                              null al

                              mov cx,x2        ; Anzahl Zeichen ...
                              sub cx,x1
                              inc cx
                              mov dx,cx

                              mov cx,y2        ; Anzahl Zeilen
                              sub cx,y1
                              inc cx

balken_schreib_schleife_text:

                              push cx

                                mov cx,dx
                                push di
                                  rep stosw
                                pop di
                                add di,2*80

                              pop cx
                              loop balken_schreib_schleife_text

                            pop es
                          popa
                        prozedur_ende 5

; ################################### weiter

