;######## Grafikmodus

ausschrift_vor_prozedur_grafik:
                        prozedur_anfang
                          pusha

                            mov al,aus_vfarbe
                            call farbumrechnung
                            mov aus_vfarbe,al

                            mov al,aus_hfarbe
                            call farbumrechnung
                            mov aus_hfarbe,al

                            ; VF AND ( NOT HF )
                            mov ah,aus_vfarbe
                            mov al,aus_hfarbe
                            xor al,00f
                            and al,ah
                            mov w [aus_farbe],ax ; al
                            mov w [schrift],rom_16x8p
                            call ausschrift_prozedur

                            ; HF AND ( NOT VF )
                            mov ah,aus_vfarbe
                            mov al,aus_hfarbe
                            xor ah,00f
                            and al,ah
                            mov w [aus_farbe],ax ; al
                            mov w [schrift],rom_16x8n
                            call ausschrift_prozedur

                            ; VF AND HF
                            mov ah,aus_vfarbe
                            mov al,aus_hfarbe
                            and al,ah
                            mov w [aus_farbe],ax ; al
                            mov w [schrift],rom_16x8v
                            call ausschrift_prozedur

                            ; ( NOT VF ) AND ( NOT HF )
                            mov ah,aus_vfarbe
                            mov al,aus_hfarbe
                            xor ax,00f0f
                            and al,ah
                            mov w [aus_farbe],ax ; al
                            mov w [schrift],rom_16x8l
                            call ausschrift_prozedur
                          popa
                        prozedur_ende 5

; ################################

ausschrift_prozedur:
                        push ds
                          push es
                            pusha

                              farbe aus_farbe

                              mov si,aus_off
                              mov bx,aus_x
                              mov dx,aus_y

                              cld
                              null ax
                              lodsb
                              mov cx,ax
                              jcxz ausschrift_ende

ausschrift_schleife:

                              mov w [gb_x],bx
                              mov w [gb_y],dx
                              add bx,8 ; naechstes Mal

                              lodsb
                              null ah

                              #if zeichenlaenge = 16
                              shl ax,4
                              #else
                              push dx
                                mov dx,zeichenlaenge
                                mul dx
                              pop dx
                              #endif
                              add ax,schrift
                              mov w [gb_off],ax
                              call grafik_block_prozedur
                              loop ausschrift_schleife

ausschrift_ende:

                            popa
                          pop es
                        pop ds
                        ret

;######### Textmodus

ausschrift_prozedur_text:
                        prozedur_anfang
                          pusha
                            push es

                              mov si,aus_off

                              mov ax,aus_y
                              mov bl,80
                              mul bl
                              add ax,aus_x
                              shl ax,1
                              mov di,ax

                              mov ax,segment_0b800
                              mov es,ax

                              mov al,aus_hfarbe
                              call farbumrechnung
                              shl al,4
                              mov ah,al
                              mov al,aus_vfarbe
                              call farbumrechnung
                              or ah,al

                              cld
                              lodsb
                              mov cl,al
                              null ch
                              jcxz ausschrift_prozedur_text_ende

ausschrift_prozedur_text_schleife:
                              lodsb
                              stosw
                              loop short ausschrift_prozedur_text_schleife

ausschrift_prozedur_text_ende:

                            pop es
                          popa
                        prozedur_ende 5

