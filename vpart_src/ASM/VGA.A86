; AL=003                80*25 Text
; AL=012                640*480 Grafik (16)
modus_setzen:
                        pusha
                          cmp al,003
                          jne modus_setzen_bios

                          ; schon 80*25 Textmodus ?
                          push ds
                            push 00040
                            pop ds
                            cmp byte [00049],al
                          pop ds
                          jne modus_setzen_bios

                          ; sparsamer..
                          ; "CLS"
                          bildschirm_loeschen

                          ; "GOTO 1,1"
                          mov ah,002
                          mov bh,0
                          sub dx,dx
                          int 010
                          jmp short modus_setzen_weiter

modus_setzen_bios:
                          mov ah,000
                          int 010


modus_setzen_weiter:
                          mov ah,001      ; Set Cursor Type
                          mov cx,02000    ; unsichtbar
                          int 010

                          ; Blinken -> helle Hintergrundfarben
                          mov ax,01003
                          null bl
                          int 010

                        popa
                        ret

