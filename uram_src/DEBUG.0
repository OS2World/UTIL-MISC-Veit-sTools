int1_behandlung:
                                push bp         ; [bp+0]
                                  mov bp,sp


                                  pusha
                                    push ds,es

                                      mov [_ax],ax
                                      mov [_dx],dx

                                      ;--wrde fr GW2000 kein Code erzeugen
