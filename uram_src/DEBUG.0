                                      ;--cmp [bp+4],ax
                                      ;--if e jmp keine_behandlung

                                      push 00040
                                      pop ds

                                      mov al,80*2
                                      mul b [00050+1] ; Zeile Cursor
                                      mov w cs:[debug_cursor],ax

                                      push 0b800
                                      pop es

                                      cld
                                      mov ax,[bp+4] ; CS
                                      call ausschrift_word_debug
                                      mov al,':'
                                      call ausschrift_zeichen_debug
                                      mov ax,[bp+2] ; IP
                                      call ausschrift_word_debug

                                      mov al,' '
                                      call ausschrift_zeichen_debug
                                      call ausschrift_zeichen_debug

                                      lds si,[bp+2]

                                      null cx

                                      cmp b [si],0ec   ; in al,dx
                                      je debug_in_08
                                      cmp b [si],0ed   ; in ax,dx
                                      je debug_in_16
                                      cmp w [si],0ed66 ; in eax,dx
                                      je debug_in_32

                                      cmp b [si],0ee   ; out dx,al
                                      if e jmp debug_out_08
                                      cmp b [si],0ef   ; out dx,ax
                                      if e jmp debug_out_16
                                      cmp w [si],0ef66 ; out dx,eax
                                      if e jmp debug_out_32

                                      sub dh,dh
                                      mov dl,[si+1]
                                      cmp b [si],066
                                      if e mov dl,[si+2]
                                      mov cs:[_dx],dx

                                      cmp b [si],0e4   ; in al,[__]
                                      je debug_in_08
                                      cmp b [si],0e5   ; in ax,[__]
                                      je debug_in_16
                                      cmp w [si],0e566 ; in eax,[__]
                                      je debug_in_32

                                      cmp b [si],0e6   ; out [__],al
                                      if e jmp debug_out_08
                                      cmp b [si],0e7   ; out [__],ax
                                      if e jmp debug_out_16
                                      cmp w [si],0e766 ; out [__],eax
                                      if e jmp debug_out_32


                                      jmp debug_kein_io

debug_in_32:
                                      add cl,32-16
debug_in_16:
                                      add cl,   16-8
debug_in_08:
                                      add cl,      8

                                      call vergiss_eax_cache_bits

                                      mov al,'('
                                      call ausschrift_zeichen_debug
                                      mov ax,cx
                                      call ausschrift_byte_debug
                                      mov al,')'
                                      call ausschrift_zeichen_debug

                                      mov al,'<'
                                      call ausschrift_zeichen_debug
                                      mov al,'-'
                                      call ausschrift_zeichen_debug

                                      mov ax,cs:[_dx]
                                      call ausschrift_word_debug

                                      ; "mov dx,zahl"
                                      mov ax,cs:[_dx]
                                      call erzeuge_code_mov_dx_xxxx

                                      mov al,066
                                      cmp cl,32
                                      if e call erzeuge_code_byte

                                      mov al,0ed  ; in word/dword
                                      cmp cl,8
                                      if e mov al,0ec ; in byte
                                      call erzeuge_code_byte

                                      jmp debug_kein_io


debug_out_32:

                                      add cl,32-16
                                      db 066
                                      ror ax,16
                                      call ausschrift_word_debug
                                      db 066
                                      ror ax,16
debug_out_16:
                                      add cl,16-8
                                      mov al,b cs:[_ax+1] ; ah
                                      call ausschrift_byte_debug

debug_out_08:
                                      add cl,8
                                      mov al,b cs:[_ax] ; al
                                      call ausschrift_byte_debug


                                      mov al,'-'
                                      call ausschrift_zeichen_debug
                                      mov al,'>'
                                      call ausschrift_zeichen_debug
                                      mov ax,w cs:[_dx]
                                      call ausschrift_word_debug

                                      ; "mov dx,zahl"
                                      mov ax,w cs:[_dx]
                                      call erzeuge_code_mov_dx_xxxx


                                      cmp cl,32
                                      jne nicht_out_32

                                      ; mov eax,zahl
                                      ; out dx,eax
                                      db 066
                                      ror ax,16
                                      mov dx,ax
                                      db 066
                                      ror ax,16
                                      mov ax,w cs:[_ax]
                                      call erzeuge_code_mov_eax_xxxxxxxx
                                      mov al,066
                                      call erzeuge_code_byte
                                      mov al,0ef
                                      call erzeuge_code_byte

                            nicht_out_32:
                                      cmp cl,16
                                      jne nicht_out_16

                                      ; mov ax,zahl
                                      ; out dx,ax
                                      mov ax,w cs:[_ax]
                                      call erzeuge_code_mov_ax_xxxx
                                      mov al,0ef
                                      call erzeuge_code_byte

                            nicht_out_16:
                                      cmp cl,08
                                      jne nicht_out_08

                                      ; mov al,zahl
                                      ; out dx,al
                                      mov al,b cs:[_ax]
                                      call erzeuge_code_mov_al_xx
                                      mov al,0ee
                                      call erzeuge_code_byte

                            nicht_out_08:


debug_kein_io:
                                      ; keine Bildschirmverschiebungen wenn
                                      ; URAMMIN erzeugt wird
                                      cmp b cs:[einzelschrittmodus],'1'
                                      jne keine_behandlung

                                      push es
                                      pop ds

                                      mov si,80*2     ; Zeile 2
                                      mov di,0        ; Zeile 1
                                      mov cx,24*80*2/2
                                      cld
                                      rep movsw

                                      mov ax,00700
                                      mov cx,1*80*2/2
                                      rep stosw

                                      push 00040
                                      pop ds

                                      sti
                                      mov cx,4 ; 4/18
warte_schleife0:
                                      mov ax,[0006c]
warte_schleife1:
                                      cmp ax,[0006c]
                                      je warte_schleife1
                                      loop warte_schleife0

keine_behandlung:

                                    pop es,ds
                                  popa
                                pop bp

                                iret
